<h3 class="mb-4">注文履歴一覧</h3>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  
  <tbody>
    <% orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order), class:"text-dark", style: "text-decoration:underline;" %></td>
        <td><%= order.customer.full_name %></td>
        <td><%= order.order_details.sum(:quantity) %></td>
        <td><%= order.status_i18n %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate orders, theme: 'twitter-bootstrap-4' %>
