<h3>会員情報編集</h3>

  <%= form_with model: @customer, url: customers_path(@customer), local: true do |f| %>
    <div class="row form-group pt-3">
      <div class="col-3"><%= f.label :氏名 %></div>
      <div class="col-md-3"><%= f.text_field :last_name, autofocus: true, class:"form-control" %></div>
      <div class="col-md-3"><%= f.text_field :first_name , class:"form-control" %></div>
    </div>

    <div class="row form-group">
      <div class="col-3"><%= f.label :フリガナ %></div>
      <div class="col-md-3"><%= f.text_field :last_name_kana , class:"form-control" %></div>
      <div class="col-md-3"><%= f.text_field :first_name_kana , class:"form-control" %></div>
    </div>

    <div class="row form-group">
      <div class="col-3"><%= f.label :郵便番号 %></div>
      <div class="col-md-3"><%= f.text_field :postal_code , class:"form-control" %></div>
    </div>

    <div class="row form-group">
      <div class="col-3"><%= f.label :住所 %></div>
      <div class="col-md-8"><%= f.text_field :address , class:"form-control" %></div>
    </div>

    <div class="row form-group">
      <div class="col-3"><%= f.label :電話番号 %></div>
      <div class="col-md-3"><%= f.text_field :phone_number , class:"form-control" %></div>
    </div>

    <div class="row form-group">
      <div class="col-3"><%= f.label :メールアドレス %></div>
      <div class="col-md-3"><%= f.email_field :email , class:"form-control" %></div>
    </div>

    <div class="row form-group offset-3 pt-3">
      <%= f.submit "編集内容を保存" ,class:"btn btn-dark" ,style:"width:200px" %>
      <%= link_to "退会する", customers_unsubscribe_path , class:"btn btn-danger ml-5" %>
    </div>
  <% end %>