<h3 class="ml-5 mb-5">マイページ</h3>

  <div class="row">
    <h5 class="font-weight-bold col-2 m-0 align-self-center">登録情報</h5>
    <div class="col-5"><%= link_to "編集する", edit_customers_path , class:"btn btn-info"%></div>
  </div>

  <table class="table table-light col-md-8 mt-3">
    <tr>
      <td class="text-white bg-dark">氏名</td>
      <td><%= @customer.full_name %></td>
    </tr>

    <tr>
      <td class="text-white bg-dark">カナ</td>
      <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
      <td class="text-white bg-dark">郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>

    <tr>
      <td class="text-white bg-dark">住所</td>
      <td><%= @customer.address %></td>
    </tr>

    <tr>
      <td class="text-white bg-dark">電話番号</td>
      <td><%= @customer.phone_number %></td>
    </tr>

    <tr>
      <td class="text-white bg-dark">メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </table>

  <div class="row pt-3">
    <h5 class="font-weight-bold col-2 m-0 align-self-center">配送先</h5>
    <div class="col-5"><%= link_to "一覧を見る", deliveries_path , class:"btn btn-dark"%></div>
  </div>

  <div class="row pt-3">
    <h5 class="font-weight-bold col-2 m-0 align-self-center">注文履歴</h5>
    <div class="col-5"><%= link_to "一覧を見る", orders_path , class:"btn btn-dark"%></div>
  </div>