<div class="row offset-">
  <h3>注文履歴一覧</h3>
</div>

<table class="table table-light table-borderless border mt-3">
  <thead class="table-active">
    <tr class="text-white bg-dark">
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td class="align-middle"><%= order.created_at.strftime("%Y/%m/%d") %></td>
        <td class="align-middle">
          〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %></td>
        <td class="align-middle">
          <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br>
          <% end %>
        </td>
        <td class="align-middle"><%= order.total_price.to_s(:delimited) %>円</td>
        <td class="align-middle"><%= order.status_i18n %></td>
        <td class="align-middle text-center">
          <%= link_to "表示する", order_path(order) ,class:"btn btn-dark"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>